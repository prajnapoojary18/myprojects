import java.util.Scanner;

public class collatzConjecture {
    public static void main(String[] args) {
        System.out.println("enter the number:");
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        while (n > 0) {
            if (n % 2 == 0) {
                n = n / 2;
            }else n=n*3+1;

            System.out.println(n);
            if(n==1){
                break;
            }
        }

    }
}
